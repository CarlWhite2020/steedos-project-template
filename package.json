{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "services/*",
    "steedos-packages/*",
    "steedos-app",
    "nodered-app"
  ],
  "scripts": {
    "start": "steedos start",
    "start:services": "moleculer-runner services/*/package.service.js --hot --repl",
    "inspect": "NODE_OPTIONS=' --inspect' && steedos start",
    "repl": "moleculer-runner --repl",
    "docker:steedos": "docker-compose -f docker-compose-steedos.yml up",
    "docker:vscode": "docker-compose -f docker-compose-vscode.yml up",
    "docker:db": "docker-compose -f docker-compose-db.yml up",
    "nodered:admin": "node nodered-app/red-admin",
    "nodered:start": "moleculer-runner nodered-app/package.service.js --repl",
    "source:config": "steedos source:config",
    "source:retrieve": "steedos source:retrieve",
    "source:deploy": "steedos source:deploy"
  },
  "dependencies": {
    "@steedos/service-community": "^2.4.8",
    "node-red": "^3.0.2"
  }
}
